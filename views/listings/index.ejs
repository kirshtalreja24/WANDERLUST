<%- layout("/layouts/boilerplate.ejs")%>


     <h3> ALL Listings </h3>

     <div class="row row-cols-lg-3  row-cols-md-3 row-cols-sm-1">
            <%for(let list of all_listings) {%>
                <a href="/listings/<%= list._id %>" class="listing-link">
                 <div class="card  col listing-card">
                        <img src="<%= list.image %>"
                         class="card-img-top"
                          alt="listing_image"
                          style="height: 20rem;">
                          <div class="card-img-overlay"></div>
                        <div class="card-body">
                        <p class="card-text">
                                <b><%= list.title %></b><br> 
                                $<%= list.price.toLocaleString("en-US")%>/night        
                                </p>
                        </div>
                 </div>
                </a>
  <%}%>
     </div>

     
       