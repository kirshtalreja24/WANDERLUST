    <%- layout("/layouts/boilerplate.ejs") %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %> ";
        const coordinates = <%- JSON.stringify(list.geometry.coordinates) %>;
    </script>


    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%= list.title %></h3>
        </div>

        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= list.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text mb-2">
                    <i class="fa-solid fa-user me-1"></i><strong>Owner:</strong>
                    <i class="text-primary"><%= list.owner.username %></i>
                </p>
                <p class="card-text mb-2">
                    <i class="fa-solid fa-circle-info me-1"></i><strong>Description:</strong>
                    <span class="text-muted"><%= list.description %></span>
                </p>
                <p class="card-text mb-2">
                    <i class="fa-solid fa-dollar-sign me-1"></i><strong>Price:</strong>
                    <span class="text-success fw-bold">$<%= list.price.toLocaleString("en-US") %></span>
                </p>
                <p class="card-text mb-2">
                    <i class="fa-solid fa-location-dot me-1"></i><strong>Location:</strong>
                    <span><%= list.location %></span>
                </p>
                <p class="card-text">
                    <i class="fa-solid fa-flag me-1"></i><strong>Country:</strong>
                    <span><%= list.country %></span>
                </p>
            </div>
        </div>
    </div>

    <% if (currUser && list.owner._id.equals(currUser._id)) { %>
        <div class="btns mt-3">
            <a href="/listings/<%= list._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%= list._id %>?_method=DELETE" class="delete-form d-inline">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
        <hr class="offset-3 col-6" />
    <% } %>

    <!-- Review Form -->
    <div class="col-8 offset-3 mb-3">
        <% if (currUser) { %>
            <h4>Leave a Review</h4>
            <form method="POST" action="/listings/<%= list._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                <fieldset class="starability-slot">
                    <!-- <label for = "rating"class="form-label ">Rating</label> -->
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1"  name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2"  name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3"  name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4"  name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5"  name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter some comments</div>
                    <div class="valid-feedback">Looks Good</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        <% } %>
    </div>

    <!-- Review List -->

    <% if(list.reviews.length > 0) {%>
    <div class="row offset-3">
        <hr class="col-8" />
        <p><b>All reviews</b></p>

        <% for (review of list.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title mt-3">
                        <%= review.author.username %>
                    </h5>
                    <p class="card-text"><%= review.comment %></p>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>"> </p>
                    <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                    <form class="mb-3" method="POST" action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
    <% } %>
    <div class="col-8 offset-3 mb-3">
            <h3> Where you'll be </h3>
            <div id="map">

            </div>   
    </div>
    


    <!-- Confirm Delete Modal -->
    <div id="confirmModal" class="modal">
        <div class="modal-content">
            <p>Do you want to delete this Listing?</p>
            <div class="modal-buttons">
                <button id="confirmYes">Yes</button>
                <button id="confirmNo">No</button>
            </div>
        </div>
    </div>
    
<script src="/JS/map.js"> </script>

